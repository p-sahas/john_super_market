<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER_LEFT" prefHeight="768.0" prefWidth="1166.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.johnssupermarket.InventoryController">
    <children>
        <Label styleClass="label-header" text="Inventory Management">
            <VBox.margin>
                <Insets bottom="10.0" top="20.0" />
            </VBox.margin>
        </Label>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Button fx:id="addItemButton" mnemonicParsing="false" onAction="#handleAddItem" text="Add Item" />
                <Button fx:id="updateItemButton" mnemonicParsing="false" onAction="#handleUpdateItem" text="Update Item" />
                <Button fx:id="deleteItemButton" mnemonicParsing="false" onAction="#handleDeleteItem" styleClass="button-delete" text="Delete Item" />
            </children>
            <VBox.margin>
                <Insets bottom="10.0" />
            </VBox.margin>
        </HBox>
        <TableView fx:id="inventoryTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colImage" minWidth="50.0" prefWidth="75.0" text="Image" />
                <TableColumn fx:id="colItemCode" minWidth="80.0" prefWidth="100.0" text="Item Code" />
                <TableColumn fx:id="colItemName" minWidth="100.0" prefWidth="150.0" text="Item Name" />
                <TableColumn fx:id="colBrand" minWidth="80.0" prefWidth="100.0" text="Brand" />
                <TableColumn fx:id="colPrice" minWidth="60.0" prefWidth="80.0" text="Price" />
                <TableColumn fx:id="colQuantity" minWidth="60.0" prefWidth="80.0" text="Quantity" />
                <TableColumn fx:id="colCategory" minWidth="80.0" prefWidth="100.0" text="Category" />
                <TableColumn fx:id="colPurchasedDate" minWidth="100.0" prefWidth="120.0" text="Purchased Date" />
                <TableColumn fx:id="colLowStock" minWidth="100.0" prefWidth="120.0" text="Low Stock Threshold" />
                <TableColumn fx:id="colDealer" minWidth="100.0" prefWidth="150.0" text="Dealer" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
        <HBox alignment="CENTER_RIGHT" spacing="20.0">
            <children>
                <Label fx:id="totalItemsLabel" styleClass="label-subheader" text="Total Item Count: 0">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="totalValueLabel" styleClass="label-subheader" text="Total Inventory Value: LKR0.00">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
            </children>
            <VBox.margin>
                <Insets bottom="10.0" right="10.0" top="10.0" />
            </VBox.margin>
        </HBox>
    </children>
    <padding>
        <Insets left="10.0" right="10.0" />
    </padding>
</VBox>
