<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="mainContentPane" prefHeight="800.0" prefWidth="1366.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.johnssupermarket.MainController">
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="200.0" spacing="10.0" styleClass="vbox-menu" BorderPane.alignment="CENTER">
            <children>
                <Label text="Menu">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="20.0" top="20.0" />
                    </VBox.margin>
                </Label>
                <Button fx:id="viewInventoryButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleViewInventory" text="Inventory" />
                <Button fx:id="manageDealersButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleViewDealers" text="Dealers" /> <!-- Changed text to just "Dealers" -->
                <Separator prefWidth="200.0">
                    <VBox.margin>
                        <Insets top="10.0" />
                    </VBox.margin>
                </Separator>
                <Button fx:id="showLowStockButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleShowLowStock" text="Check Low Stock" />
                <Button fx:id="exportTextButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleExportToText" text="Export as Text" />
                <Button fx:id="helpButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
                <VBox alignment="BOTTOM_CENTER" VBox.vgrow="ALWAYS">
                    <children>
                        <Button fx:id="saveButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleSave" styleClass="button-save" text="Save All" />
                        <Button fx:id="exitButton" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleExit" styleClass="button-delete" text="Exit">
                            <VBox.margin>
                                <Insets bottom="10.0" top="5.0" />
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </children>
            <padding>
                <Insets left="10.0" right="10.0" />
            </padding>
        </VBox>
    </left>
</BorderPane>
